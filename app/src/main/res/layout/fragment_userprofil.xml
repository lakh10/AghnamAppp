            android:textSize="24sp"/>
    <TextView
            android:text="الحساب الشخصي"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:id="@+id/textView26" android:textColor="@color/colorPrimary"
            android:autoText="false" android:textSize="24sp" android:layout_below="@+id/textView25"/>
    <Button
            android:text="تسجيل الخروج"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="19dp" android:layout_centerHorizontal="true" android:id="@+id/btnLogOut"
            android:textColor="@android:color/white"/>
