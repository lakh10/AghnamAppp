        android:gravity="right"
        android:paddingBottom="5dp"
        android:text="رقم الهاتف"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtUserInfoPaymentMethod"
        android:layout_alignEnd="@+id/textView22"
        android:gravity="right"
        android:paddingBottom="5dp"
        android:text="وسيلة الدفع"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtUserInfoPaymentMethod"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="232dp"
        android:background="#d6dedddd"
        android:text=" عبر الحساب البنكي" />

    <TextView
        android:id="@+id/txtUserInfoPhone"
        android:layout_width="214dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/txtUserInfoPaymentMethod"
        android:layout_alignTop="@+id/textView23"
        android:layout_marginStart="20dp"
        android:background="#d6dedddd"
        android:text="" />

    <TextView
        android:id="@+id/txtUserInfoAddress"
        android:layout_width="214dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/txtUserInfoPaymentMethod"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:background="#d6dedddd"
        android:text="" />

    <TextView
        android:id="@+id/txtUserInfoName"
        android:layout_width="210dp"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/txtUserInfoPaymentMethod"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="168dp"
        android:background="#d6dedddd"
        android:text="" />
    <TextView
            android:text="الحساب الشخصي"
            android:layout_width="0dp"
